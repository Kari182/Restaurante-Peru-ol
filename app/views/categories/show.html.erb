<div class="container">
   <div class="my-5 card text-center col-6">
      <p id="notice"><%= notice %></p>
      <div class="card-header">
         <h5>Nombre categoria</h5>
         <p class="card-text"><%= @category.name %>
         </p>
      </div>
      <div class="card-body py-4">
         <h5>Icono categoria</h5>
         <p class="card-text">  
            <%= @category.image %>
         </p>
         <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-success" %> 
         <%= link_to 'Back', categories_path, class: "btn btn-dark" %>
      </div>
   </div>
</div>