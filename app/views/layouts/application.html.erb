         <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
               <%= link_to 'Inicio', home_path, class: 'nav-link active' %>
            </li>
            <li class="nav-item">
               <%= link_to 'Ver Menu', carta_path, class: 'nav-link active' %>
            </li>
            <li class="nav-item">
               <%= link_to 'Contacto', contacto_path, class: 'nav-link active' %>
            </li>
         </ul>
         <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
         </ul>
      </div>
   </div>
</nav>
<!-- /Header-->

    <%= yield %>


 
