<div class="container">
  <div class="card text-center my-5 col-8">
    
    <p id="notice"><%= notice %></p>
    <h5 class="card-header">Mostrar platos</h5>
  <div class="card-body">
  </div>
<p>
  <strong>Name:</strong>
  <%= @plate.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @plate.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @plate.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= @plate.image %>
</p>

<p>
  <strong>Category:</strong>
  <%= @plate.category_id %>
</p>

<%= link_to 'Edit', edit_plate_path(@plate) %> |
<%= link_to 'Back', plates_path %>

<% if @plate.image.attached? %>
  <image src="<%= url_for(@plate.image) %>" height=200>
<% end %>
