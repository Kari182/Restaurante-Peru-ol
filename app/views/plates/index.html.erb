

<!-- inicio formulario-->
<div class="container">
<p id="notice"><%= notice %></p>
  <div class="row"> 
    <h1>Lista de Platos</h1>

<table class="table table-bordered">
<caption>Lista de platos</caption>
  <thead class="table-success">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Descripci√≥n</th>
      <th scope="col">img</th>
      <th scope="col">Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plates.each do |plate| %>
      <tr>
        <td><%= plate.name %></td>
        <td><%= plate.price %></td>
        <td><%= plate.description %></td>
        <td><%= plate.image %></td>
        <td><%= plate.category.name %></td>
        <td><%= link_to 'Show', plate, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_plate_path(plate), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', plate, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to 'Agregar nuevo plato', new_plate_path, :class => "btn btn-danger my-2" %>
<br>
<%= link_to 'Ir a Categorias', categories_path, :class => "btn btn-light my-2"  %>

</div>


